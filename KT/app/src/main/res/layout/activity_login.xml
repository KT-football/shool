<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Refactor.ui.Avtivity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:src="@drawable/login_background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y95"
        android:id="@+id/imageView6"
        android:src="@drawable/login_xianyuandanji"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y60"
        android:id="@+id/imageView7"
        android:src="@drawable/background_text"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <ImageView
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y60"
        android:id="@+id/imageView8"
        android:src="@drawable/background_text"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView_login_button"
        android:layout_alignStart="@+id/imageView_login_button" />

    <Button
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y45"
        android:id="@+id/imageView_login_button"
        android:background="@drawable/login_buttom"
        android:layout_marginTop="28dp"
        android:text="登 录"
        android:textSize="@dimen/x20"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:id="@+id/imageView10"
        android:src="@drawable/user"
        android:layout_marginBottom="9dp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11" />

    <ImageView
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:id="@+id/imageView11"
        android:src="@drawable/password"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="9dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y45"
        android:id="@+id/imageView12"
        android:src="@drawable/line"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y45"
        android:id="@+id/imageView13"
        android:src="@drawable/line"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignLeft="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12" />

    <EditText
        android:layout_width="@dimen/x225"
        android:layout_height="@dimen/y60"
        android:id="@+id/editText_user"
        android:hint="请输入账号"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:background="@drawable/no_border"
        android:layout_above="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <EditText
        android:layout_width="@dimen/x225"
        android:layout_height="@dimen/y60"
        android:id="@+id/editText_password"
        android:hint="请输入密码"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:background="@drawable/no_border"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13" />


</RelativeLayout>
