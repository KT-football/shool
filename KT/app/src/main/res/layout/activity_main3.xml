<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#222222">

        <ImageView
            android:id="@+id/menu_iv_hint"
            android:layout_width="100dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/menu_iv_hint"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/movie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/selector_main_bottom_1"
                android:gravity="center"
                android:selectAllOnFocus="true"
                android:text="开始上课"
                android:textColor="@drawable/selector_main_bottom_1_tv"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/selector_main_bottom_2"
                android:gravity="center"
                android:text="班级管理"
                android:textColor="@drawable/selector_main_bottom_1_tv"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/menu_iv_hint"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/variety"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/selector_main_bottom_3"
                android:gravity="center"
                android:text="校园赛事"
                android:textColor="@drawable/selector_main_bottom_1_tv"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/cartoon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/selector_main_bottom_4"
                android:gravity="center"
                android:text="设置"
                android:textColor="@drawable/selector_main_bottom_1_tv"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_bottom" />


    <ImageView
        android:id="@+id/menu_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_special_disease_circle"
        android:scaleType="centerInside"
        android:src="@drawable/icon_progress"
         />

    <LinearLayout
        android:id="@+id/menu_ll"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_special_disease_circle"
        android:orientation="horizontal">

        <com.newer.kt.Refactor.view.WaterwaveProgress.WaterWaveProgress
            android:id="@+id/waterWaveProgress1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
